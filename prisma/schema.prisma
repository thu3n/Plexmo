// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Server {
  id        String   @id @default(cuid())
  name      String
  baseUrl   String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  key   String @id
  value String
}

model AllowedUser {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String?  // Optional, just for display friendliness
  createdAt DateTime @default(now())
}

model MediaStatistics {
  id            String   @id // The Unified GUID (e.g. imdb://tt12345, plex://..., or slug)
  title         String
  year          Int?
  poster        String?
  type          String   // 'movie' or 'episode' or 'show'
  
  // Aggregate Metrics
  totalPlays    Int      @default(0)
  totalDuration Int      @default(0) // Seconds
  firstSeen     DateTime @default(now())
  lastSeen      DateTime @updatedAt
  
  meta_json     String?  // JSON for flexibility
  uniqueUsers   Int      @default(0)
}

  items         LibraryItem[]
}

model UnifiedItem {
  id            String   @id @default(cuid())
  guid          String   @unique
  title         String
  year          Int?
  poster        String?
  type          String   // 'movie' or 'show' or 'episode'
  
  // Hierarchy
  parentId      String?
  parent        UnifiedItem? @relation("Hierarchy", fields: [parentId], references: [id])
  children      UnifiedItem[] @relation("Hierarchy")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  items         LibraryItem[]
}

model LibraryItem {
  ratingKey     String
  serverId      String
  libraryKey    String
  title         String
  year          Int?
  thumb         String?
  type          String?
  addedAt       DateTime? // SQL stores as TEXT, Prisma DateTime?
  updatedAt     DateTime // SQL TEXT
  meta_json     String?

  unifiedItemId String?
  unifiedItem   UnifiedItem? @relation(fields: [unifiedItemId], references: [id])

  @@id([ratingKey, serverId])
  @@map("library_items")
}
